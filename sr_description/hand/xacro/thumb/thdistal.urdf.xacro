<robot xmlns:xacro="http://www.ros.org/wiki/xacro"
xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor"
xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller"
xmlns:joint="http://playerstage.sourceforge.net/gazebo/xmlschema/#slider"
xmlns:interface="http://playerstage.sourceforge.net/gazebo/xmlschema/#interface"
xmlns:body="http://playerstage.sourceforge.net/gazebo/xmlschema/#body"
xmlns:geom="http://playerstage.sourceforge.net/gazebo/xmlschema/#geom">

  <xacro:include filename="$(find sr_description)/hand/xacro/thumb/thdistal.gazebo.xacro" />
  <xacro:include filename="$(find sr_description)/hand/xacro/thumb/thdistal.transmission.xacro" />
  <!-- tip_sensor describes the sensor std, none, bio, bt_sp, ubi, eli -->
  <!-- prefix can be anything but usually is "r_" or  "l_" for right and left hands distinction -->
  <!-- parent is the parent link for the first joint -->
  <xacro:macro name="thdistal"
    params="tip_sensor:=^|std prefix:=^ parent">
    <xacro:if value="${'bio' in tip_sensor}">
      <!--    BIOTAC -->
      <link name="${prefix}thdistal_J1_dummy">
        <inertial>
          <origin xyz="0 0 0" rpy="0 0 0" />
          <mass value="0.001" />
          <inertia ixx="0.00000001" ixy="0.0" ixz="0.0"
          iyy="0.00000001" iyz="0.0" izz="0.00000001" />
        </inertial>
      </link>
      <joint name="${prefix}THJ1" type="revolute">
        <parent link="${parent}" />
        <child link="${prefix}thdistal_J1_dummy" />
        <origin xyz="0 0 0.02" rpy="0 0 ${-pi/2}" />
        <axis xyz="1 0 0" />
        <limit lower="${20*pi/180}" upper="${20.1*pi/180}"
        effort="0.0" velocity="2.0" />
        <dynamics damping="0.5" />
      </joint>
      <gazebo reference="${prefix}THJ1">
        <provideFeedback>1</provideFeedback>
        <implicitSpringDamper>1</implicitSpringDamper>
      </gazebo>
      <link name="${prefix}thdistal">
        <inertial>
          <origin xyz="-0.009 0.0 0.035" rpy="0 0 ${-pi/2}" />
          <!-- approximated only FIXME -->
          <mass value="0.008" />
          <inertia ixx="0.0000011" ixy="0.0" ixz="0.0"
          iyy="0.0000011" iyz="0.0" izz="0.0000005" />
        </inertial>
        <visual>
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry name="${prefix}th_distal_visual">
            <!-- <mesh filename="package://sr_description/meshes/hand/biotacs/biotac.stl" scale="0.0254 0.0254 0.0254" /> -->
            <mesh filename="package://sr_description/meshes/hand/biotacs/biotac_decimated.dae"
            scale="0.0254 0.0254 0.0254" />
          </geometry>
          <material name="BiotacGreen" />
        </visual>
        <collision>
          <geometry name="${prefix}th_distal_collision_geom">
            <!-- <box size="0.001 0.001 0.001" /> -->
            <!-- <mesh filename="package://sr_description/meshes/hand/biotacs/biotac-v5.stl" scale="0.0254 0.0254 0.0254" /> -->
            <mesh filename="package://sr_description/meshes/hand/biotacs/biotac_decimated.dae"
            scale="0.0254 0.0254 0.0254" />
          </geometry>
        </collision>
      </link>
      <gazebo reference="${prefix}thdistal">
        <sensor type="contact" name="${prefix}thdistal_contact">
          <always_on>1</always_on>
          <update_rate>1000.0</update_rate>
          <contact>
            <collision>${prefix}thdistal_geom</collision>
            <topic>${prefix}thdistal_collision</topic>
          </contact>
          <plugin name="${prefix}thdistal_gazebo_ros_bumper_controller"
          filename="libgazebo_ros_bumper.so">
            <alwaysOn>true</alwaysOn>
            <frameName>${prefix}thdistal</frameName>
            <updateRate>100.0</updateRate>
            <bumperTopicName>
            contacts/${prefix}th/distal</bumperTopicName>
          </plugin>
        </sensor>
        <selfCollide>true</selfCollide>
        <material>BiotacGreen</material>
      </gazebo>
      <joint name="${prefix}th_distal_joint" type="fixed">
        <parent link="${prefix}thmiddle" />
        <child link="${prefix}thdistal" />
        <origin xyz="0 0.0 0.01" rpy="0 0 ${-pi/2}" />
      </joint>
      <!-- extra link to imaginary sphere in fingertip for FK/IK calculations -->
      <!-- remove visual and collision once the correct position is found -->
      <link name="${prefix}thtip">
        <inertial>
          <mass value="0.001" />
          <origin xyz="0 0 0" rpy="0 0 0" />
          <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0"
          izz="0" />
        </inertial>
        <!--visual>
          <geometry>
            <sphere radius="0.002" />
          </geometry>
        </visual-->
      </link>
      <gazebo reference="${prefix}thtip">
        <material name="LightGrey" />
      </gazebo>
      <joint name="${prefix}thtip" type="fixed">
        <parent link="${prefix}thdistal_J1_dummy" />
        <child link="${prefix}thtip" />
        <origin xyz="0.0 0.004 ${0.032}"
        rpy="0 0 0" />
        <!-- approximated only FIXME -->
      </joint>
    </xacro:if>
    <xacro:unless value="${'bio' in tip_sensor}">
      <!-- common -->
      <link name="${prefix}thdistal">
        <inertial>
          <mass value="0.016" />
          <origin xyz="0 0 0.01375" rpy="0 0 0" />
          <inertia ixx="0.0000021" ixy="0.0" ixz="0.0"
          iyy="0.0000022" iyz="0.0" izz="0.000001" />
        </inertial>
        <visual>
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry name="${prefix}thdistal_visual">
            <xacro:unless value="${tip_sensor in ['bt_sp','ubi','eli']}">
              <!-- Standard distal  -->
              <mesh filename="package://sr_description/meshes/hand/TH1_z.dae"
                    scale="0.001 0.001 0.001" />
            </xacro:unless>
            <xacro:if value="${'eli' in tip_sensor}">
              <!-- Ellispoid distal  -->
              <mesh filename="package://sr_description/meshes/hand/ellipsoids/thdistal_ellipsoid_visual.dae"
              scale="0.001 0.001 0.001" />
            </xacro:if>
            <xacro:if value="${'ubi' in tip_sensor}">
              <!-- Ubi distal -->
              <mesh filename="package://sr_description/meshes/hand/ubi_tactiles/ubi_thtip_visual.dae"
                    scale="0.001 0.001 0.001" />
            </xacro:if>
            <xacro:if value="${'bt_sp' in tip_sensor}">
              <!-- bt sp distal  -->
              <mesh filename="package://sr_description/meshes/hand/biotacs/sp.dae" />
            </xacro:if>
          </geometry>
          <material name="shadow_thmiddle_material">
            <color rgba="0.2 0.2 0.2 1.0" />
          </material>
        </visual>
        <collision>
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry name="${prefix}thmiddle_collision_geom">
            <xacro:unless value="${tip_sensor in ['bt_sp','ubi','eli']}">
              <!-- Standard distal  -->
              <mesh filename="package://sr_description/meshes/hand/TH1_z.dae"
                    scale="0.001 0.001 0.001" />
            </xacro:unless>
            <xacro:if value="${'eli' in tip_sensor}">
              <!-- Ellispoid distal  -->
              <mesh filename="package://sr_description/meshes/hand/ellipsoids/thdistal_ellipsoid.dae"
              scale="0.001 0.001 0.001" />
            </xacro:if>
            <xacro:if value="${'ubi' in tip_sensor}">
              <!-- Ubi distal -->
              <mesh filename="package://sr_description/meshes/hand/ubi_tactiles/ubi_thtip_collision.stl"
              scale="0.001 0.001 0.001" />
            </xacro:if>
            <xacro:if value="${'bt_sp' in tip_sensor}">
              <!-- bt sp distal  -->
                          <mesh filename="package://sr_description/meshes/hand/biotacs/sp.dae" />
            </xacro:if>
            <!--      <box size="0.015 0.015 0.015" /> -->
          </geometry>
        </collision>
      </link>
      <joint name="${prefix}THJ1" type="revolute">
        <parent link="${parent}" />
        <child link="${prefix}thdistal" />
        <origin xyz="0 0 0.032" rpy="0 0 ${-pi/2}" />
        <axis xyz="1 0 0" />
        <limit lower="-${15.0*pi/180}" upper="${90.0*pi/180}" effort="1.0"
        velocity="4.0" />
        <dynamics damping="0.2" />
      </joint>
      <gazebo reference="${prefix}THJ1">
        <provideFeedback>1</provideFeedback>
        <implicitSpringDamper>1</implicitSpringDamper>
      </gazebo>
      <link name="${prefix}thtip">
        <inertial>
          <mass value="0.001" />
          <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0"
          iyz="0.0" izz="0.0" />
        </inertial>
      </link>
      <joint name="${prefix}thtip" type="fixed">
        <parent link="${prefix}thdistal" />
        <child link="${prefix}thtip" />
        <origin xyz="0 0 0.0275" rpy="0 0 0" />
      </joint>
      <xacro:thdistal_gazebo />
    </xacro:unless>
    <!-- extensions -->
    <xacro:thdistal_transmission />
  </xacro:macro>
</robot>
